<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>10</LangVersion>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="..\WebForms.Parser\**\*.cs" Exclude="..\WebForms.Parser\obj\**\*.cs" LinkBase="Parser" />
        <Compile Update="..\WebForms.Parser\Nodes\TextNode.cs">
          <Link>Parser\Nodes\TextNode.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Nodes\HtmlServerNode.cs">
          <Link>Parser\Nodes\HtmlServerNode.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Designer\DesignerEvent.cs">
          <Link>Parser\Designer\DesignerEvent.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Extensions\MemberResult.cs">
          <Link>Parser\Extensions\MemberResult.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Internals\RequiredMemberAttribute.cs">
          <Link>Parser\Internals\RequiredMemberAttribute.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Models\Tokens\OffsetRange.cs">
          <Link>Parser\Models\Tokens\OffsetRange.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Nodes\EventNode.cs">
          <Link>Parser\Nodes\EventNode.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Nodes\PropertyNode.cs">
          <Link>Parser\Nodes\PropertyNode.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Nodes\TemplateNode.cs">
          <Link>Parser\Nodes\TemplateNode.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Nodes\Language.cs">
          <Link>Parser\Nodes\Language.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Nodes\CompileContext.cs">
          <Link>Parser\Nodes\CompileContext.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Nodes\DesignerModel.cs">
          <Link>Parser\Nodes\DesignerModel.cs</Link>
        </Compile>
        <Compile Update="..\WebForms.Parser\Nodes\ControlId.cs">
          <Link>Parser\Nodes\ControlId.cs</Link>
        </Compile>
    </ItemGroup>

    <ItemGroup>
        <None Remove="Template.liquid" />
        <None Remove="Templates\viewstate.scriban" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="..\WebForms.Parser\Templates\designer.scriban" LinkBase="Templates" />
        <EmbeddedResource Include="..\WebForms.Parser\Templates\vb-designer.scriban" LinkBase="Templates" />
        <EmbeddedResource Include="..\WebForms.Parser\Templates\viewstate.scriban" LinkBase="Templates" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.3" PrivateAssets="all" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.1.0" PrivateAssets="all" />
        <PackageReference Include="Microsoft.CodeAnalysis.VisualBasic" Version="4.1.0" PrivateAssets="all" />
        <PackageReference Include="Nullable" Version="1.3.1" PrivateAssets="all" />
        <PackageReference Include="IsExternalInit" Version="1.0.3" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Scriban" Version="5.5.0" GeneratePathProperty="true" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="template.scriban" />
    </ItemGroup>

    <PropertyGroup>
        <GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPaths</GetTargetPathDependsOn>
    </PropertyGroup>

    <Target Name="GetDependencyTargetPaths">
        <ItemGroup>
            <TargetPathWithTargetPlatformMoniker Include="$(PKGScriban)\lib\netstandard2.0\*.dll" IncludeRuntimeDependency="false" />
        </ItemGroup>
    </Target>
</Project>
