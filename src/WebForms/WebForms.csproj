<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net6.0;net472</TargetFrameworks>
		<LangVersion>10</LangVersion>
        <Nullable>enable</Nullable>
        <RootNamespace>WebFormsCore</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.ObjectPool" Version="6.0.9" />
		<PackageReference Include="Microsoft.Extensions.Features" Version="6.0.9" />
		<PackageReference Include="Microsoft.Extensions.Primitives" Version="6.0.0" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Nullable" Version="1.3.0" PrivateAssets="all" />
		<PackageReference Include="IsExternalInit" Version="1.0.2" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
		<PackageReference Include="Microsoft.AspNetCore.SystemWebAdapters" Version="1.0.0-rc.1.22464.1" />
		<ProjectReference Include="..\WebForms.Adapters\WebForms.Adapters.csproj" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net472'">
		<PackageReference Include="System.Memory" Version="4.5.4" />
		<PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.4" />
		<PackageReference Include="Microsoft.AspNetCore.SystemWebAdapters.FrameworkServices" Version="1.0.0-rc.1.22464.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\src\WebForms.SourceGenerator\WebForms.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
		<ProjectReference Include="..\WebForms.Parser\WebForms.Parser.csproj" />
	</ItemGroup>

</Project>
